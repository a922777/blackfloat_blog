
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/reset.css">
  <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  <link rel='stylesheet' href='/stylesheets/all.css' />
  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.0/css/all.min.css'/>
  <title>黑飄的家</title>
</head>
<body>
  <%- include('./layout/header',{place:"home"}); %>
  <div class="container my-5 bg-litte-white">
    <div class="row">
      <div class="contents col-md-9 ">
        <% for(post of posts){ %>
          <a class="layout-card p-5 mb-5 text-dark" href='/content/<%= post._id %>'>
            <h3 class="h3"><%= post.Title %></h3>
            <div class="text-muted mb-3"><small>
              <i class="fas fa-calendar-alt mr-2"></i>
              Create <%= post.UpDate.getFullYear() %>-<%= post.UpDate.getMonth() %>-<%= post.UpDate.getDate() %>
            </small></div>
            <p class="description text-left text-overflow"><%= post.Description %></p>
          </a>
        <% } %>
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item">
              <% if(NowPage != 1) { %>
                <a class="page-link bg-hover-green  " href="/page/<%= NowPage-1 %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              <% } %>
            </li>
            <% for(let i=1;i<=needPage;i++){ %>
              <% if(i == NowPage){ %>
                <li class="page-item active"><a class="page-link " href="/page/<%= i %>"><%= i %></a></li>
              <% }else{ %>
                <li class="page-item bg-hover-green"><a class="page-link bg-hover-green" href="/page/<%= i %>"><%= i %></a></li>
              <% } %> 
            <% } %>
            <% if(NowPage != needPage && needPage != 0) { %>
              <a class="page-link bg-hover-green" href="/page/<%= NowPage+1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            <% } %>
            </li>
          </ul>
        </nav>
      </div>
      <div class="about col-md-3 d-none d-md-block">
        <div class="layout-card text-center">
          <img src="/images/myphoto.png" alt="" width="110px" height="110px" class="mt-3 rounded">
          <div class="layout-card-title">BlackFloat</div>
          <div class="mb-3 layout-card-title">Web junior</div>
          <ul class="d-flex justify-content-center">
            <li><a href="lin110510533@gmail.com" class="text-muted mr-2 text-hover-primary"><i class="fas fa-envelope fa-2x" ></i></a></li>
            <li><a href="https://github.com/blackstuend" class="text-muted text-hover-primary" ><i class="fab fa-github fa-2x"></i></a></li>
            <li><a href="https://www.facebook.com/profile.php?id=100007032816545" class="text-muted text-hover-primary" ><i class="fab fa-2x fa-facebook ml-2"></i></a></li>
          </ul>
        </div>
        <div class="layout-card p-4 mb-3">
          <div class="mb-2 text-primary">
            <i class="fas fa-book-open mr-2"></i><span>Now Post</span>
          </div>
          <% for(post of posts){ %>
          <a class=" mb-2 d-block bg-hover-primary px-3 py-1 text-black" href='/content/<%= post._id %>'>
            <div class="mb-0 bg-hover-primary"><%= post.Title %></div>
            <small class="text-mute"><%= post.UpDate.getFullYear() %>-<%= post.UpDate.getMonth() %>-<%= post.UpDate.getDate() %></small>
          </a>
          <% } %>
        </div>
        <div class="layout-card p-4 mb-3">
          <div class="mb-2 text-info">
            <i class="fas fa-folder-open mr-2 "></i><span class="text-15">Categories</span>
          </div>
          <% for(categorie of categories){ %>
            <a class=" mb-2 d-block px-3 d-flex text-black bg-hover-info px-3 py-1" href='/Categories#<%= categorie._id %>'>
              <span class="mr-auto"><%= categorie._id %></span>
              <span><%= categorie.sum %></span>
            </a>
          <% } %>
        </div>
      </div>
    </div>
    
  </div>
  <%- include('./layout/footer'); %>
</body>
<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/all.js"></script>
</html>
